// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Source {
  TICKETMASTER
  EVENTBRITE
  MEETUP
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id               String   @id @default(cuid())
  name             String
  email            String   @unique
  password         String
  salt             String
  hashedPassword   String
  role             UserRole @default(USER)
  location_default String
  interests        String?
  rsvps            Event[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now()) @updatedAt
}

model Event {
  id           String   @id @default(cuid())
  title        String
  description  String?
  address      String
  longitude    Float
  latitude     Float
  city         String
  date         DateTime
  minPrice     Float?
  maxPrice     Float?
  minPriceType String?
  maxPriceType String?
  category     String?
  source       Source?
  externalURL  String
  Users        User[]
}
